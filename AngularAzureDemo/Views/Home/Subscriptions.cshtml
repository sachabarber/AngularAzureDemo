@{
    Layout = null;
}


<div ng-show="hasSubscriptions">

    <br />
    <div class="well">
        <h2>Subscriptions</h2>
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-8">
                <table class="table table-striped table-condensed">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Subscription Active</th>
                    </tr>
                    <tbody ng:repeat="friendsSubscription in allFriendsSubscriptions">
                        <tr>
                            <td>{{friendsSubscription.Id}}</td>
                            <td>{{friendsSubscription.Name}}</td>
                            <td><input type="checkbox" ng-model="friendsSubscription.IsActive"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4">
                <button type="button" class="btn btn-primary" data-ng-click="updateSubscriptions()">UPDATE SUBSCRIPTIONS</button>
            </div>
        </div>
    </div>
</div>
